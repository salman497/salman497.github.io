{
  "openapi": "3.0.0",
  "info": {
    "title": "Process Markdown And Save Images",
    "version": "1.0.0",
    "description": "API for generate presentation url and saving DALL-E images"
  },
  "servers": [
    {
      "url": "https://api.presenty.app"
    }
  ],
  "paths": {
    "/gpt/process": {
      "post": {
        "tags": ["GPT"],
        "summary": "Process Markdown content and DALL-E content",
        "description": "",
        "operationId": "ProcessMarkdownAndSaveImages",
        "security": [
          {
            "gptApiKey": []
          }
        ],
        "consumes": ["multipart/form-data"],
        "produces": ["application/json"],
        "parameters": [],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "files": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary",
                      "description": "DALL-E generated images"
                    }
                  },
                  "markdownContent": {
                    "type": "string",
                    "description": "GPT generated markdown content"
                  },
                  "presentationName": {
                    "type": "string",
                    "description": "Presentation name"
                  },
                  "presentationId": {
                    "type": "number",
                    "description": "Optional presentation ID. Required only when updating existing markdown content."
                  }
                },
                "required": ["files", "markdownContent", "presentationName"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Content processed successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GPTResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request."
          },
          "401": {
            "description": "API key missing."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GPTResponse": {
        "type": "object",
        "properties": {
          "presentationUrl": {
            "type": "string",
            "description": "Generated Presentation URL"
          },
          "presentationId": {
            "type": "number",
            "description": "Generated Presentation Id for update"
          }
        },
        "required": ["presentationUrl", "presentationId"]
      }
    },
    "securitySchemes": {
      "gptApiKey": {
        "type": "apiKey",
        "name": "gpt-key",
        "in": "header"
      }
    }
  }
}
